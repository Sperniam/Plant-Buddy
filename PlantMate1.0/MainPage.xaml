<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantMate1._0.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label x:Name="TitleLabel"
                   Text="🌱 PlantBuddy"
                   FontSize="32"
                   HorizontalOptions="Center" />

            <Image x:Name="PlantFace"
                   Source="happy.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center" />

            <Label x:Name="MoistureLabel"
                   Text="Moisture: --%"
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Label x:Name="DaysLabel"
                   Text="Days since last watering: --"
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Button Text="Refresh" Clicked="OnRefreshClicked" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
